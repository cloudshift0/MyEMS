@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>MyEMS - Forgot Password</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="MyEMS" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/TempComp/dist/assets/images/favicon.ico" type="image/x-icon">
    <!-- vendor css -->
    <link rel="stylesheet" href="~/TempComp/dist/assets/css/style.css">
</head>

<body>
    <!-- [ auth-reset-password ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">
            <img src="~/TempComp/dist/assets/images/logo.png" alt="MyEMS" class="img-fluid mb-4">
            <div class="card borderless">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="card-body">
                            <h4 class="mb-3 f-w-400">Forgot Password</h4>
                            <hr>

                            @if (ViewData.ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <p class="mb-0">@error.ErrorMessage</p>
                                    }
                                </div>
                            }

                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["Success"]
                                </div>
                            }

                            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group mb-4">
                                    <input asp-for="Email" class="form-control" placeholder="Email address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <button type="submit" class="btn btn-block btn-primary mb-4">Send Reset Link</button>
                            </form>

                            <hr>
                            <p class="mb-0 text-muted">
                                Remember your password? <a asp-action="Login" asp-controller="Account"
                                    class="f-w-400">Sign in</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-reset-password ] end -->

    <!-- Required Js -->
    <script src="~/TempComp/dist/assets/js/vendor-all.min.js"></script>
    <script src="~/TempComp/dist/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/TempComp/dist/assets/js/pcoded.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>



                                   
            
        
