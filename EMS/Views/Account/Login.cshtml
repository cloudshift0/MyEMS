@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>MyEMS - Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="MyEMS" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/TempComp/dist/assets/images/favicon.ico" type="image/x-icon">
    <!-- vendor css -->
    <link rel="stylesheet" href="~/TempComp/dist/assets/css/style.css">
</head>

<body>
    <!-- [ auth-signin ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">
            <img src="~/TempComp/dist/assets/images/logo.png" alt="MyEMS" class="img-fluid mb-4">
            <div class="card borderless">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="card-body">
                            <h4 class="mb-3 f-w-400">Signin</h4>
                            <hr>

                            @if (ViewData.ModelState.ErrorCount > 0)
                            {
                                <div class="alert alert-danger">
                                    @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                    {
                                        <p class="mb-0">@error.ErrorMessage</p>
                                    }
                                </div>
                            }

                            @if (TempData["Success"] != null)
                            {
                                <div class="alert alert-success">
                                    @TempData["Success"]
                                </div>
                            }

                            @if (TempData["Error"] != null)
                            {
                                <div class="alert alert-danger">
                                    @TempData["Error"]
                                </div>
                            }

                            <form asp-action="Login" asp-controller="Account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" name="ReturnUrl" value="@ViewData["ReturnUrl"]" />

                                <div class="form-group mb-3">
                                    <input asp-for="Email" type="email" class="form-control"
                                        placeholder="Email address" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-4">
                                    <input asp-for="Password" type="password" class="form-control"
                                        placeholder="Password" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>

                                <div class="custom-control custom-checkbox text-left mb-4 mt-2">
                                    <input asp-for="RememberMe" type="checkbox" class="custom-control-input"
                                        id="customCheck1" />
                                    <label asp-for="RememberMe" class="custom-control-label" for="customCheck1">Save
                                        credentials.</label>
                                </div>

                                <button type="submit" class="btn btn-block btn-primary mb-4">Signin</button>
                            </form>

                            <hr>
                            <p class="mb-2 text-muted">
                                Forgot password? <a asp-action="ForgotPassword" asp-controller="Account"
                                    class="f-w-400">Reset</a>
                            </p>
                            <p class="mb-0 text-muted">
                                Don't have an account? <a asp-action="Register" asp-controller="Account"
                                    class="f-w-400">Signup</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-signin ] end -->

    <!-- Required Js -->
    <script src="~/TempComp/dist/assets/js/vendor-all.min.js"></script>
    <script src="~/TempComp/dist/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/TempComp/dist/assets/js/pcoded.min.js"></script>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>

</html>



                                       
                                       
