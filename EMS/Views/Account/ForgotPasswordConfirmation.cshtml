@{
    ViewData["Title"] = "Forgot Password Confirmation";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <title>MyEMS - Password Reset</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="" />
    <meta name="keywords" content="">
    <meta name="author" content="MyEMS" />
    <!-- Favicon icon -->
    <link rel="icon" href="~/TempComp/dist/assets/images/favicon.ico" type="image/x-icon">
    <!-- vendor css -->
    <link rel="stylesheet" href="~/TempComp/dist/assets/css/style.css">
</head>

<body>
    <!-- [ auth-reset-password ] start -->
    <div class="auth-wrapper">
        <div class="auth-content text-center">
            <img src="~/TempComp/dist/assets/images/logo.png" alt="MyEMS" class="img-fluid mb-4">
            <div class="card borderless">
                <div class="row align-items-center">
                    <div class="col-md-12">
                        <div class="card-body">
                            <h4 class="mb-3 f-w-400">Password Reset</h4>
                            <hr>

                            <div class="alert alert-info">
                                <i class="feather icon-info"></i>
                                Check your email for a password reset link. If you don't receive an email within a few
                                minutes, please check your spam folder.
                            </div>

                            <a asp-action="Login" asp-controller="Account" class="btn btn-block btn-primary mb-4">Return
                                to Login</a>

                            <hr>
                            <p class="mb-0 text-muted">
                                Need help? <a href="mailto:support@ems.com" class="f-w-400">Contact Support</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ auth-reset-password ] end -->

    <!-- Required Js -->
    <script src="~/TempComp/dist/assets/js/vendor-all.min.js"></script>
    <script src="~/TempComp/dist/assets/js/plugins/bootstrap.min.js"></script>
    <script src="~/TempComp/dist/assets/js/pcoded.min.js"></script>
</body>

</html>



                               
