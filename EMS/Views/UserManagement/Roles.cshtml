@model IEnumerable<EMS.Models.RoleViewModel>
@{
    ViewData["Title"] = "Role Management";
    Layout = "_DashboardLayout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5>Role Management</h5>
                <div class="float-right">
                    <a asp-action="CreateRole" class="btn btn-primary btn-sm">
                        <i class="feather icon-plus"></i> Create New Role
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["Success"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        @TempData["Success"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }
                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["Error"]
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                }

                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Role Name</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Name</td>
                                    <td>@role.Description</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditRole" asp-route-id="@role.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="feather icon-edit"></i> Edit
                                            </a>
                                            <form asp-action="DeleteRole" asp-route-id="@role.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this role?');">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="feather icon-trash-2"></i> Delete
                                                </button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
