@model RegisterViewModel

<form asp-action="Register" method="post">
    <label for="FullName">Full Name</label>
    <input asp-for="FullName" id="FullName" />
    <span asp-validation-for="FullName" class="text-danger"></span>
    
    <label for="Email">Email</label>
    <input asp-for="Email" id="Email" />
    <span asp-validation-for="Email" class="text-danger"></span>
    
    <label for="Password">Password</label>
    <input asp-for="Password" id="Password" type="password" />
    <span asp-validation-for="Password" class="text-danger"></span>
    
    <label for="ConfirmPassword">Confirm Password</label>
    <input asp-for="ConfirmPassword" id="ConfirmPassword" type="password" />
    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    
    <label for="Address">Address</label>
    <input asp-for="Address" id="Address" />
    <span asp-validation-for="Address" class="text-danger"></span>
    
    <label for="City">City</label>
    <input asp-for="City" id="City" />
    <span asp-validation-for="City" class="text-danger"></span>
    
    <label for="PostalCode">Postal Code</label>
    <input asp-for="PostalCode" id="PostalCode" />
    <span asp-validation-for="PostalCode" class="text-danger"></span>
    
    <button type="submit">Register</button>
</form>